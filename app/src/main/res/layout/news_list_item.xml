<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="84dp">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="84dp"
        android:layout_height="match_parent"
        tools:src="@drawable/test_thumbnail"
        android:scaleType="centerCrop"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_image"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="'Sports has changed attitudes': Obama welcomes Chicago Cubs to White House"/>

    <TextView
        android:id="@+id/item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_image"
        android:layout_below="@id/item_title"
        android:textSize="12sp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="The president is a White Sox fan but he marked the Cubsâ€™ World Series win with delight, celebrating sometimes fragile unity at his final White House function"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_image"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/item_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textStyle="italic"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="2dp"
            tools:text="Sport"/>

        <TextView
            android:id="@+id/item_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="10sp"
            android:textStyle="italic"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="2dp"
            tools:text="David Smith in Washington"/>

        <TextView
            android:id="@+id/item_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="10sp"
            android:textStyle="italic"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="2dp"
            tools:text="Jan 16, 2017 11:11pm"/>

    </LinearLayout>

</RelativeLayout>